{
  "name": "react-component-boilerplate",
  "version": "1.0.0",
  "description": "my personal boilerplate for react components",
  "main": "lib/index.js",
  "module": "src/index.js",
  "repository": "git@github.com:moki/react-component-boilerplate.git",
  "author": "Kirill Morozov (moki) <morozov.kirill.moki@gmail.com>",
  "license": "MIT",
  "keywords": [
    "react",
    "reactjs",
    "component",
    "boilerplate"
  ],
  "scripts": {
    "start": "webpack-dev-server --config webpack.config.dev.babel.js",
    "build:prod": "yarn verify && yarn clean && webpack --config webpack.config.prod.babel.js",
    "clean": "rm -rf lib/",
    "verify": "yarn lint && yarn flow && yarn test",
    "lint": "eslint src",
    "flow": "flow",
    "test": "jest --colors --coverage",
    "precommit": "yarn clean && yarn verify",
    "prepush": "yarn verify",
    "prepublish": "yarn clean && yarn verify"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^19.0.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-flow-react-proptypes": "^2.1.3",
    "babel-preset-env": "^1.4.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-flowtype": "^2.32.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2 || ^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "flow-bin": "^0.45.0",
    "husky": "^0.13.3",
    "jest": "^19.0.2",
    "react-hot-loader": "next",
    "webpack": "^2.5.0",
    "webpack-dev-server": "^2.4.5"
  },
  "peerDependencies": {
    "babel-polyfill": "^6.23.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  }
}
